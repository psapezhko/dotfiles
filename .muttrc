# Folder hooks
folder-hook 'pavel.sapezhko@gmail.com' 'source ~/.mutt/pavel.sapezhko.gmail.com'
folder-hook 'pavel.sapezhko@synesis.ru' 'source ~/.mutt/pavel.sapezhko.synesis.ru'

# Default account
source ~/.mutt/pavel.sapezhko.gmail.com

# Macros for switching accounts
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/pavel.sapezhko.gmail.com<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/pavel.sapezhko.synesis.ru<enter><change-folder>!<enter>'

# Fetch mail shortcut
bind index G imap-fetch-mail

color index red default ~P
